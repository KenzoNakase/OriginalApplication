<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trajour.trajour">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="ホーム"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecordWeightActivity"
            android:label="体重・体脂肪率を記録する"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RecordWeightListActivity"
            android:label="体重・体脂肪率一覧"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditRecordWeightActivity"
            android:label="体重・体脂肪率を記録する"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".SettingActivity" />
        <activity
            android:name=".RecordExerciseActivity"
            android:label="トレーニング記録をつける"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RecordExerciseListActivity"
            android:label="トレーニング履歴"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditRecordExerciseActivity"
            android:label="トレーニング記録をつける"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ExerciseMenuActivity"
            android:label="トレーニングメニュー"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ExerciseMenuListActivity"
            android:label="トレーニングメニュー一覧"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ExerciseMenu2Activity" />
        <activity android:name=".ExerciseMenu3Activity" />
        <activity android:name=".ExerciseMenuList2Activity"></activity>
        <activity android:name=".ExerciseMenuList3Activity"></activity>
    </application>

</manifest>