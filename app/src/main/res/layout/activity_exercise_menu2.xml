<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.trajour.trajour.ExerciseMenuActivity">


    <TextView
        android:id="@+id/textMenuName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="32dp"
        android:text="トレーニングメニュー名"
        android:textSize="18sp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textMenuName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="32dp"
        android:text="AAA"
        android:textSize="18sp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textExercise1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="32dp"
        android:text="トレーニング種目"
        android:textSize="18sp"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:id="@+id/spinnerExercise1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/textExercise1"
        android:layout_centerHorizontal="true"
        android:entries="@array/exerciseList"
        android:spinnerMode="dialog" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />



</RelativeLayout>

