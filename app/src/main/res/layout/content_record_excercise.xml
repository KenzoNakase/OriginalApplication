<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.trajour.trajour.RecordExcerciseActivity"
    tools:showIn="@layout/activity_record_excercise">


<TextView
        android:id="@+id/textExerciseDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:text="日付"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/editExerciseDate1"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textExerciseDate1"
        android:ems="10" />

    <TextView
        android:id="@+id/textBodyPart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:text="部位"
        android:textSize="18sp"
        android:layout_below="@+id/editExerciseDate1"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/editBodyPart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="32dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textBodyPart1"
        android:ems="10" />

    <TextView
        android:id="@+id/textExercise1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:text="トレーニング種目"
        android:textSize="18sp"
        android:layout_below="@+id/editBodyPart1"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/editExcercise1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/textExercise1"
        android:layout_alignParentStart="true"
        android:ems="10" />

    <TextView
        android:id="@+id/textWeight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:text="重量"
        android:textSize="18sp"
        android:layout_below="@+id/editExcercise1"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/editWeight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/textWeight1"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textRep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:text="回数"
        android:textSize="18sp"
        android:layout_below="@+id/editWeight1"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/editRep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/textRep1"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>