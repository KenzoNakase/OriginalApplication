<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.trajour.trajour.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:layout_width="126dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:background="#d3d3d3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.818"
        android:layout_marginEnd="38dp"
        android:layout_alignTop="@+id/textSex2"
        android:layout_alignEnd="@+id/listViewOneRepetitionMaximum" />

    <TextView
        android:id="@+id/textSex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:text="性別"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textSex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="48dp"
        android:text="男"
        android:layout_toRightOf="@+id/textSex1"/>

    <TextView
        android:id="@+id/textHeight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="身長"
        android:layout_below="@+id/textSex1"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textHeight2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:text="169"
        android:layout_below="@+id/textSex2"
        android:layout_toRightOf="@+id/textHeight1"/>

    <TextView
        android:id="@+id/textHeight3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:text="cm"
        android:layout_below="@+id/textSex2"
        android:layout_toRightOf="@+id/textHeight2"/>

    <TextView
        android:id="@+id/textWeight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="体重"
        android:layout_below="@+id/textHeight1"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textWeight2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:text="63"
        android:layout_below="@+id/textHeight2"
        android:layout_toRightOf="@+id/textWeight1"/>

    <TextView
        android:id="@+id/textWeight3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:text="kg"
        android:layout_below="@+id/textHeight3"
        android:layout_toRightOf="@+id/textWeight2"/>

    <TextView
        android:id="@+id/textBodyFatPercentage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="体脂肪率"
        android:layout_below="@+id/textWeight1"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textBodyFatPercentage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:text="11"
        android:layout_below="@+id/textWeight2"
        android:layout_toRightOf="@+id/textBodyFatPercentage1"/>

    <TextView
        android:id="@+id/textBodyFatPercentage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:text="%"
        android:layout_below="@+id/textWeight3"
        android:layout_toRightOf="@+id/textBodyFatPercentage2"/>

    <TextView
        android:id="@+id/textFFMI1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="FFMI"
        android:layout_below="@+id/textBodyFatPercentage1"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textFFMI2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="16dp"
        android:text="24"
        android:layout_below="@+id/textBodyFatPercentage2"
        android:layout_toRightOf="@+id/textFFMI1"/>

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Name"
        android:layout_marginEnd="14dp"
        android:layout_alignBaseline="@+id/textFFMI2"
        android:layout_alignBottom="@+id/textFFMI2"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:id="@+id/textOneRepetitionMaximum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="8dp"
        android:text="最大挙上重量（1RM）"
        android:textSize="18sp"
        android:layout_centerInParent="true"/>

    <ListView
        android:layout_width="368dp"
        android:layout_height="229dp"
        android:id="@+id/listViewOneRepetitionMaximum"
        tools:layout_editor_absoluteY="274dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/textOneRepetitionMaximum"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
