<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.trajour.trajour.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:layout_width="126dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:background="#d3d3d3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.818"
        android:layout_marginEnd="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/listViewOneRepetitionMaximum"
        android:layout_marginTop="33dp" />

    <TextView
        android:id="@+id/accountName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:textSize="18sp"
        android:text="Account Name"
        android:layout_alignTop="@+id/imageView" />

    <TextView
        android:id="@+id/textSex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性別"
        android:layout_alignBaseline="@+id/textSex2"
        android:layout_alignBottom="@+id/textSex2"
        android:layout_alignStart="@+id/accountName1" />

    <TextView
        android:id="@+id/textSex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="男"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/accountName1"
        android:layout_alignStart="@+id/textOneRepetitionMaximum" />

    <TextView
        android:id="@+id/textAge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:text="年齢"
        android:layout_below="@+id/textSex1"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textAge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:text="31"
        android:layout_alignBaseline="@+id/textAge1"
        android:layout_alignBottom="@+id/textAge1"
        android:layout_alignEnd="@+id/textSex2" />

    <TextView
        android:id="@+id/editProfile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="19dp"
        android:textSize="10sp"
        android:text="プロファイル編集"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/textOneRepetitionMaximum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="最大挙上重量（1RM）"
        android:textSize="18sp"
        android:layout_above="@+id/listViewOneRepetitionMaximum"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="368dp"
        android:layout_height="229dp"
        android:id="@+id/listViewOneRepetitionMaximum"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
